<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                    <div class="col-sm-6">
                        <span>Admin | Categories</span>
                    </div>
                    <div class="col-sm-6 text-right">
                       <a class="btn btn-sm btn-success" href="/admin/categories/new">Add category</a>
                    </div>   
            </div>
       </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                    
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                        <td>
                        <%= link_to category.title, admin_category_words_path(category.id) %>
                        </td>

                        <td>
                        <%= category.description %>
                        </td>

                        <td>
                        <%= link_to "Add word", new_admin_category_word_path(category.id), class: "btn btn-sm btn-primary text-white" %>
                        <%= link_to "Edit", edit_admin_category_path(category.id), class: "btn btn-sm btn-warning text-white" %>
                        <%= link_to "Delete", admin_category_path(category.id), method: :delete,class: "btn btn-sm btn-danger" %>
                        </td>
                        
                        </tr>
                    <% end %>
                   
                </tbody>
            </table>
    </div>
</div>

<div class="order(created_at: :desc),paginate mt-4">
<%= will_paginate %>
</div>



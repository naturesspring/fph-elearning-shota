<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                    <div class="col-sm-6">
                        <span>Admin | Categories</span>
                    </div>
                    <div class="col-sm-6 text-right">
                       <a class="btn btn-sm btn-success" href="/admin/categories/new">Add cotegory</a>
                    </div>   
            </div>
       </div>
                <table class="table table-striped">
                <thead>
                    <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                    
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                    <tr>
                    <td>
                    <%= category.title %>
                    </td>

                    <td>
                    <%= category.description %>
                    </td>

                    <td class="btn btn-sm btn-warning text-white">
                    
                       <%= link_to "Edit", edit_admin_category_path(category.id) %>
                 
                    </td>


                    <td  class="btn btn-sm btn-default text-muted">
                    <%= link_to "delete", admin_category_path(category.id), method: :delete %>
                    </td>


                    </tr>
                    <% end %>
                   
                </tbody>
                </table>
    </div>
</div>

<div class="order(created_at: :desc),paginate mt-4">
<%= will_paginate %>
</div>



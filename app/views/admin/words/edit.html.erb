<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | Categories</span>
                </div>
                <div class="col-sm-6 text-right">
                    <%= link_to "Back", admin_category_words_path(@category.id),class: "btn btn-sm"%>
                </div>
                </div>
            </div>
        </div>

        <div class="card-body">

        <%= form_for [:admin,@category,@word] do |f| %>
        <%= render "shared/errors", object: f.object %>

            <div class="form-group">
                <%= f.label :word %>
                <%= f.text_field :content, class: "form-control" %>
            </div>

            <%= f.fields_for :choices do |choice| %>
             <div class="form-group">
                 <%= choice.label :choice %>  
                    <div class="row">
                        <div class="col-md-8">
                        <%= choice.text_field :content, class: "form-control" %>
                        </div>
                        <div class="col-md-2">
                        correct <%= choice.check_box :correct %>
                        </div>
                   </div>
            </div>
            <% end %>

            <div class="text-center">
            <%= f.submit "Save word", class: "btn btn-success" %>
            </div>
        <% end %>
        </div>
    </div>
</div>
               
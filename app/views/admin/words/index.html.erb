<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                    <div class="col-sm-6">
                        <span>Admin | <%= @category.title %>  | Words</span>
                    </div>
                    <div class="col-sm-6 text-right">
                        <%= link_to "Add word", new_admin_category_word_path(@category.id),class: "btn btn-sm btn-success"%>
                        <%= link_to "Back", admin_categories_path(@category.id),class: "btn btn-sm"%>
                    </div>
               
            </div>
       </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                    <th scope="col">Words</th>
                   
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @words.each do |word| %>
                        <tr>
                         <td>
                         <%= word.content %>
                        </td>
                        <td>
                            <%= link_to "Edit", edit_admin_category_word_path(@category,word), class: "btn btn-sm btn-warning text-white" %>
                            <%= link_to "Delete", admin_category_word_path(@category,word), method: :delete,class: "btn btn-sm btn-danger" %>
                        </td>
                        </tr>
                    <% end %>
                     
                </tbody>
            </table>
    </div>
</div>

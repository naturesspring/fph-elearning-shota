<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-sm-6">
                    <span>Admin | <%= @category.title %> | Words</span>
                </div>
                <div class="col-sm-6 text-right">
                    <a class="btn btn-sm" href="/admin/categories">Back</a>
                </div>
            </div>
        </div>

        <div class="card-body">

        <%= form_for [:admin,@category,@word] do |f| %>
        <%= render "shared/errors", object: f.object %>

        
            <div class="form-group">
                <%= f.label :word %>
                <%= f.text_field :content, class: "form-control" %>
            </div>

           
            <div class="text-center">
            <%= f.submit "Save Word", class: "btn btn-success" %>
            </div>
        <% end %>
        </div>
    </div>
</div>
<main>
    <div class="container py-1">

        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="panel">
                        <div class="card-body">
                            <div class="text-center">
                                <div class="avatar">
                                    <div class="default">
                                        <i class="glyphicon glyphicon-user"></i>
                                    </div>
                                </div>
                     
                                <% if @user.avatar?%>
                                     <div>
                                        <%= image_tag(@user.avatar.url) %>
                                     </div>
                                <% end %>
                               
                                <div class="media-body ml-3">
                                    <h1><%= @user.name %></h1>
                                    <p><%= @user.email %></p>
                                </div>

                                <hr>
                                
                                <div class="row mt-15">
                                    <div class="col-sm-6">
                                        <strong><a href="#">0</a></strong>

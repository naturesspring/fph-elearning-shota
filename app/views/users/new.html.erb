<div class="row">
 <div class="col-md-6 mx-auto">
 <h1 class="text-center">Sign up</h1>
 <p class="text-center">Join us for free!</p>


 <%= form_for @user do |f| %>
 <%#= render "shared/errors", object: f.object %>

 <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <% if @user.errors.messages[:name].any? %>
    <small class="text-danger"><%= :name.capitalize %> <%= @user.errors.messages[:name].first %></small>
    <% end %>
</div>

<div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
    <% if @user.errors.messages[:email].any? %>
    <small class="text-danger"><%= :email.capitalize %> <%= @user.errors.messages[:email].first %></small>
<% end %>
</div>

<div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
    <% if @user.errors.messages[:password].any? %>
    <small class="text-danger"><%= :password.capitalize %> <%= @user.errors.messages[:password].first %></small>
<% end %>
</div>
<div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    
</div>

<%= f.submit "Create an account", class: "btn btn-primary btn-block" %>
 <%  end %>
 </div>
</div>
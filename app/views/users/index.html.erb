<h1 class="text-center">Users</h1>
<hr>

<div class="row">
<% @users.each do |user| %>
    <div class="col-md-6 mb-2">
     <div>
       <div class="card">
        <div class="card-body">
         <div class="media">
          <% if user.avatar?%>
             <div class="avatar">
                <%= image_tag(user.avatar.url) %>
             </div>
         <% else %>
         <%=image_tag("13.jpeg", class: "avatar") %>
          <% end %>
           <div class="media-body">
   

            <%= link_to user.name, user_path(user.id) %>
            </div>
         </div>
        </div>
       </div> 
    </div>
</div>
<% end %>
</div>

<div class="paginate mt-4">
<%= will_paginate %>
</div>